    <script>

      function updateUpvote(userId, title, pdfId) {
        const year = '<%= year %>'
        const branch = '<%= branch %>'
        $.post('/dashboard/' + year + '/' + branch,
          {
            id: userId,
            title: title
          },
          (res, status) => {
            $(`#${pdfId}`).text(res.upvoteCount);
          });
      }
  
    </script>
</body>

</html>